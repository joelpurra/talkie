    "scripts": ["./packages/browser-background/dist/rollup/background.js"],
    "service_worker": "./packages/browser-serviceworker/dist/rollup/serviceworker.js"
  },
  "permissions": [
    "activeTab",
    "contextMenus",
    "offscreen",
    "scripting",
    "storage"
  ],
  "optional_permissions": ["clipboardRead"],
  "commands": {
    "_execute_action": {
      "suggested_key": {
        "default": "Ctrl+Shift+A",
        "mac": "Command+Shift+A"
      },
      "description": "__MSG_commandActionDescription__"
    },
    "start-stop": {
      "suggested_key": {
        "default": "Alt+Shift+A"
      },
      "description": "__MSG_commandStartStopDescription__"
    },
    "read-clipboard": {
      "suggested_key": {
        "default": "Ctrl+Shift+1",
        "mac": "Command+Shift+1"
      },
      "description": "__MSG_commandReadClipboardDescription__",
      "global": true
    }
  },
  "options_ui": {
    "page": "./packages/options-renderer/src/options.html#settings",
    "open_in_tab": true
  },
  "requirements": {},
  "offline_enabled": true,
  "default_locale": "en",
  "developer": {
    "name": "Joel Purra",
    "url": "https://joelpurra.com/projects/talkie/"
  },
  "action": {
